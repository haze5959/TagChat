                          break;
                          case "navy": //남색
                          $('#input.msg').css("color", "navy");
                          text_color = "navy";
                          break;
                          case "purple": //보라
                          $('#input.msg').css("color", "purple");
                          text_color = "purple";
                          break;
                          case "pink": //핑크
                          $('#input.msg').css("color", "pink");
                          text_color = "pink";
                          break;
                          default:

                        }
                      }
                    });
                    $('#writeSize.ui.dropdown').dropdown({
                      onChange: function(value){

                        switch (value) {
                          case "15px": //10
                          $('#input.msg').css("font-size", "15px");
                          text_size = "15px";
                          break;
